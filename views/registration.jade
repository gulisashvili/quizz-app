extends layout

block content
 .container
  .row
    .col-xs-12.col-md-6.col-md-offset-3
      form.registration-form
        h1(class="center-block") Registration Page
        .form-group
          label(for="reg-username") User Name
          input(type="text", class="form-control", id="reg-username", placeholder="Enter user name")
        .form-group
          label(for="reg-password") Password
          input(type="password", class="form-control", id="reg-password", placeholder="Enter password")
        .form-group
          a#reg-btn(href="/registration" class="btn btn-primary btn-block") Register
