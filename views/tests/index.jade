extends ../layout

block content
  .container
      .row.show-quizz-wrapper(data-id="#{quizz._id}")
        .col-xs-12.col-md-6.col-md-offset-3
          h1.test-title #{quizz.testName}
          form(id="test-form")
            each question, index in quizz.questions
              .form-group.show-question-wrapper(data-number="#{index+1}")
                
                .panel.panel-warning
                  .panel-heading
                    h4 #{question.question}
                  .panel-body
                    .radio
                      label 
                        input.answer(type="radio", name="question-#{index+1}", value="1")
                        | #{question.answer1}

                    .radio
                      label 
                        input.answer(type="radio", name="question-#{index+1}", value="2")
                        | #{question.answer2}

                    .radio
                      label 
                        input.answer(type="radio", name="question-#{index+1}", value="3")
                        | #{question.answer3}

                    .radio
                      label 
                        input.answer(type="radio", name="question-#{index+1}", value="4")
                        | #{question.answer4}

            input(type="submit", id="submit-test-btn", class="submit-test-btn btn btn-success", value="Submit test")







              
